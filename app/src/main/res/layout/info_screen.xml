<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent"
    android:padding="16dp">
    <ImageView
        android:id="@+id/info_background_img"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <ImageView
        android:id="@+id/back_btn"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/back_btn"
        app:tint = "@color/white"
        android:rotation="180"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="40dp"
        android:layout_height="40dp"/>
    <TextView
        android:id="@+id/titleInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Info"
        android:gravity="center"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-medium"
        android:importantForAccessibility="yes"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/divider"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/titleInfo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ScrollView
        android:id="@+id/scrollInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/infoBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="12dp"
            android:lineSpacingExtra="4dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:contentDescription="2048 o‘yini haqida ma’lumot"
            android:text="2048 — raqamli kublarni birlashtirib, 2048 soniga yetish maqsadida o‘ynaladigan oddiy, ammo qiziqarli o‘yin.\n\nQanday o‘ynaladi:\n• Kublar tanlagan yo‘nalishingizga (↑ ↓ ← →) siljiydi.\n• Bir xil raqamlar to‘qnashsa, qo‘shilib kattaroq raqam hosil bo‘ladi.\n• Har harakatdan so‘ng bo‘sh joyda yangi 2 yoki 4 paydo bo‘ladi.\n• Joy qolmasa — o‘yin tugaydi.\n\nMaqsad:\n• 2048 kafelini yasash va xohlasangiz, undan ham yuqori natijaga intilish.\n\nMaslahat:\n• Oldindan o‘ylab harakat qiling va eng katta sonni bir burchakda ushlang."/>
    </ScrollView>
    <ImageView
        android:id="@+id/telegram"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/telegram"
        android:layout_margin="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/telephone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/telephone"
        android:layout_margin="60dp"
        android:layout_width="50dp"
        android:layout_height="50dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>